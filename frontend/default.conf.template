server {
    listen       ${SERVICE_PORT};
    server_name  localhost;

    location ~ (?<no_slash>.*)/$ {
       return 301 $scheme://$host$no_slash;
    }

    location ${PUBLIC_URL} {
        try_files $uri $uri/index.html =404;
        alias   /usr/share/nginx/html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
